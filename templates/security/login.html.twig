{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <label for="username">Nom d'utilisateur :</label>
        <input type="text" value="{{ last_username }}"
               placeholder="Nom d'utilisateur" name="username" id="inputUsername"
                required autofocus>

        <label for="password">Mot de passe :</label>
        <input type="password" name="password" placeholder="Mot de passe"
               id="inputPassword"  required>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"><em> Se souvenir de moi</em>
            </label>
        </div>
        <button class="btn btn-success" id="login" name="login" type="submit">Se connecter</button>
    </form>
{% endblock %}
