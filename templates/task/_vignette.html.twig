<div class="col-sm-4 mb-2">
    <div class="card">
        <div class="card-body">
            <div class="float-right ">
                {% if task.isDone %}
                    <i class="fa fa-check text-black-50"></i>
                {% else %}
                    <i class="fa fa-times text-black-50"></i>
                {% endif %}
            </div>
            <h4 class="card-title">
                <a href="{{ path('task_edit', {'id' : task.id }) }}">
                    {{ task.title }}
                </a>
            </h4>

            <p>{{ task.content }}</p>
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="card-footer text-center">
            {% if task | taskCanUpdate %}
            <a href="{{ path('task_toggle', {'id' : task.id }) }}" class="btn btn-success btn-sm ">
                {% if not task.isDone %}Marquer comme faite{% else %}Marquer non termin√©e{% endif %}
            </a>
            {% endif %}

            {% if task | taskCanDelete %}
                <a href="{{ path('task_delete', {'id' : task.id }) }}" class="btn btn-danger btn-sm ">
                    Supprimer
                </a>
            {% endif %}

        </div>
        {% endif %}
    </div>
</div>