{% extends 'base.html.twig' %}

{% block header_img %}
    <img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}"
                           alt="todo list">
{% endblock %}

{% block body %}
    <div class="row">
        {% for task in tasks %}
            {{ include('task/_vignette.html.twig',{'task':task}) }}
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée.
                <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>

{% endblock %}
