{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/summernote/summernote-bs4.css')) }}">
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-10 col-lg-9">

            {{ include ('task/_form.html.twig',{'title':'Modifier la tâche' }) }}

            <p class="text-muted">
                Cette tâche
                {% if task.user %}
                    appartient à {{ task.user.username }}
                {%  else %}
                    n'appartient à personne
                {% endif %}
            </p>
            <div class="d-none">
                {{ include('share/_delete_form.html.twig',{'domaine': 'task','id':task.id}) }}
            </div>
        </div>
    </div>
    <a href="{{ path('task_list') }}" class="btn btn-link m-5">Retour à la liste des tâches</a>

{% endblock %}

{% block javascripts %}
    <script src="{{ absolute_url( asset('plugins/summernote/summernote-bs4.min.js')) }}"></script>
    <script>
        $(function () {
            // Summernote
            $('.textarea').summernote();
        })
    </script>
{% endblock %}